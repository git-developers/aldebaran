{% extends "BackendBundle::template.html.twig" %}

{% set uploadsFolderPath = app.request.schemeAndHttpHost ~ '/' ~ project_name ~ '/web/uploads/' %}

{% block stylesheets %}
    {{ parent() }}

    {#datatables#}
    <link rel="stylesheet" href="{{ asset('bundles/backend/plugins/datatables/dataTables.bootstrap.css')}}">

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {#
    "bLengthChange": false,
    "bFilter": false,
    "bSort": true,
    "bInfo": true,
    "bAutoWidth": false,
    #}

    {#datatables#}
    <script src="{{ asset('bundles/backend/plugins/datatables/jquery.dataTables.js')}}"></script>
    <script src="{{ asset('bundles/backend/plugins/datatables/dataTables.bootstrap.min.js')}}"></script>
    <script src="{{ asset('bundles/backend/js/datatables-delete-item.js')}}" ></script>

    <script type="text/javascript">

        $('body').displayDeleteModal({path: '{{ path('backend_video_delete') }}'});

        $(function () {

            var table = $('#table-json').DataTable({
                "bPaginate": true,
                "bSort": false,
                "lengthMenu": [[50, 100, 150, -1], [50, 100, 150, "Todos"]],
                "data": {{ entitiesJson | raw }},
                "language": {
                          "emptyTable": "No hay datos disponibles en la tabla"
                },
                "columns": [
                    {
                        "data": function (obj) {
                            return '<span class="label label-default">' + obj.id_increment + '</span>';
                        }
                    },
                    {
                        "data": function (obj) {
                            if(obj.title != null){
                                return obj.title;
                            }
                            return "";
                        }
                    },
                    {
                        "data": function (obj) {
                            if(obj.body != null){
                                return obj.body;
                            }
                            return "";
                        }
                    },
                    {
                        "data": function (obj) {
                            if(obj.youtube_thumbnail != null){
                                return '<img src="'+ obj.youtube_thumbnail +'" class="img-thumbnail" height="80">';
                            }
                            return "";
                        }
                    },
                    {
                        "data": function (obj) {
                            if(obj.youtube_duration != null){
                                return '<button type="button" class="btn bg-purple btn-flat  btn-sm">'+ obj.youtube_duration +'</button>';
                            }
                            return "";
                        }
                    },
                    {
                        "data": function (obj) {
                            if(obj.user != null){
                                return '<span class="label label-primary">'+obj.user.name+' '+obj.user.last_name+'</span>';
                            }
                            return "";
                        }
                    },
                    {
                        "data": function (obj) {
                            if(obj.access != null && obj.access == 'public'){
                                    return '<span class="label label-success">publico</span>';
                            }else if(obj.access != null && obj.access == 'private'){
                                return '<span class="label label-danger">privado</span>';
                            }
                            return "";
                        }
                    },
                    {
                        "data": function (obj) {
                            if(obj.created != null){
                                return obj.created;
                            }
                            return "";
                        }
                    },

                    {% if is_granted("ROLE_EDIT_VIDEO", "backend_news") %}
                    {
                        "data": function (obj) {
                            return '<a href="{{ path('backend_video_edit', { 'id': ''}) }}' + obj.id_increment + '" class="btn btn-success " alt="Editar" title="Editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>';
                        }
                    },
                    {% endif %}

                    {% if is_granted("ROLE_DELETE_VIDEO", "backend_news") %}
                    {
                        "data": function (obj) {
                            return '<button data-id="' + obj.id_increment + '" data-toggle="modal" data-target="#modal-delete" class="open-modal-delete btn btn-danger " ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>';
                        }
                    },
                    {% endif %}
                ],
                "fnRowCallback": function( nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    $(nRow).attr("id","id_increment_" + aData.id_increment);
                    return nRow;
                }
            });

        });
    </script>

{% endblock %}

{% block contenido %}

    {#id auto increment#}
    <input type="hidden" value="" id="id-hidden">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <i class="fa fa-fw fa-play-circle"></i> Gestionar videos youtube
            <small>lista</small>
        </h1>
        <ol class="breadcrumb">
            {#<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>#}
            {#<li class="active">Dashboard</li>#}
            <li>
                {% if is_granted("ROLE_CREATE_VIDEO", "backend_video") %}
                    <a href="{{ path('backend_video_create') }}" style="color: #fff;" class="btn btn-block btn-success btn-sm">
                        <i class="fa fa-fw fa-plus"></i> crear video
                    </a>
                {% endif %}
            </li>
        </ol>
    </section
            >

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">

                <div class="box">
                    <div class="box-header">
                        {#<h3 class="box-title">Data Table With Full Features</h3>#}
                    </div><!-- /.box-header -->

                    <div class="box-body">
                        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="table-json" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>titulo</th>
                                            <th>body</th>
                                            <th>thumbnail</th>
                                            <th>duración</th>
                                            <th>creado por</th>
                                            <th>acceso</th>
                                            <th>creado</th>

                                            {% if is_granted("ROLE_EDIT_VIDEO", "backend_news") %}
                                                <th>&nbsp</th>
                                            {% endif %}

                                            {% if is_granted("ROLE_DELETE_VIDEO", "backend_news") %}
                                                <th>&nbsp</th>
                                            {% endif %}
                                        </tr>
                                        </thead>


                                        <tfoot>
                                        <tr>
                                            <th>#</th>
                                            <th>titulo</th>
                                            <th>body</th>
                                            <th>thumbnail</th>
                                            <th>duración</th>
                                            <th>creado por</th>
                                            <th>acceso</th>
                                            <th>creado</th>

                                            {% if is_granted("ROLE_EDIT_VIDEO", "backend_news") %}
                                                <th>&nbsp</th>
                                            {% endif %}

                                            {% if is_granted("ROLE_DELETE_VIDEO", "backend_news") %}
                                                <th>&nbsp</th>
                                            {% endif %}
                                        </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div><!-- /.box-body -->
                </div>




            </div><!-- ./col -->
        </div><!-- /.row -->

    </section><!-- /.content -->



    <div class="modal modal-danger" id="delete-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title">Delete item <span id="id-hidden-span" class="badge bg-red">-</span></h4>
                </div>
                <div class="modal-body">
                    <p>esta seguro?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Cerrar</button>
                    <button id="eliminar-item" type="button" class="btn btn-outline">Eliminar</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>




{% endblock %}